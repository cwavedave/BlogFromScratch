<%- include("partials/header") -%>

<div class="">
<h1> Compose </h1>
<h6> <%= firstPost %></h6>
   <form class="" action="/compose" method="post">
      <div class="form-group ">
          <label>Title</label>
          <input class="form-control" type="text" name="title" autofocus>
          <label>Post</label>
          <textarea class="form-control" name="content" rows="5" cols="30"></textarea>
      </div>

           <label for="Countries">Country:</label>
      <input list="Countries" name="Country" placeholder="Which Country">
      <datalist id="Countries">
        <% countrySelection.forEach(function(country)  { %>
        <option value=" <%=country.emoji %> <%= country.name %>">
          <% }) %>
      </datalist>


     <section class="formSubmit">
      <button type="submit" name="button">Submit</button>
      <button type="reset" name="reset">Clear Post </button>
    </section>

 </form>
</div>
<%- include("partials/footer") -%>
